<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="LOAN">

    <sql id="queryDynSql">
        <isNotEmpty prepend="AND" property="LOAN_ID">
            T.LOAN_ID = #LOAN_ID#
        </isNotEmpty>
        <isNotEmpty prepend="AND" property="CASE_ID">
            T.CASE_ID = #CASE_ID#
        </isNotEmpty>
        <isNotEmpty prepend="AND" property="CUSTOMER_ID">
            T.CUSTOMER_ID = #CUSTOMER_ID#
        </isNotEmpty>
        <isNotEmpty prepend="AND" property="PRODUCT_ID">
            T.PRODUCT_ID = #PRODUCT_ID#
        </isNotEmpty>
        <isNotEmpty prepend="AND" property="LOAN_STATUS">
            T.LOAN_STATUS = #LOAN_STATUS#
        </isNotEmpty>
        <isNotEmpty prepend="AND" property="LOAN_AMOUNT">
            T.LOAN_AMOUNT = #LOAN_AMOUNT#
        </isNotEmpty>
        <isNotEmpty prepend="AND" property="RESIDUE_AMOUNT">
            T.RESIDUE_AMOUNT = #RESIDUE_AMOUNT#
        </isNotEmpty>
        <isNotEmpty prepend="AND" property="VALUE_DATE">
            T.VALUE_DATE = #VALUE_DATE#
        </isNotEmpty>
        <isNotEmpty prepend="AND" property="DUE_DATE">
            T.DUE_DATE = #DUE_DATE#
        </isNotEmpty>
        <isNotEmpty prepend="AND" property="CREATE_TIME">
            T.CREATE_TIME = #CREATE_TIME#
        </isNotEmpty>
        <isNotEmpty prepend="AND" property="UPDATE_TIME">
            T.UPDATE_TIME = #UPDATE_TIME#
        </isNotEmpty>
    </sql>

    <sql id="coreSql">
        SELECT T.* FROM ${schema.xd}.LOAN T
        <dynamic prepend="WHERE">
            <include refid="queryDynSql"/>
        </dynamic>
        <![CDATA[ ORDER BY T.LOAN_ID]]>
    </sql>

    <select id="pageQuery" parameterClass="map" resultClass="java.util.HashMap">
        <include refid="public.pageBegin"/>
        <include refid="coreSql"/>
        <include refid="public.pageEnd"/>
    </select>

    <select id="pageCount" parameterClass="map" resultClass="int">
        <![CDATA[
			SELECT COUNT('') CNT
			FROM ${schema.xd}.LOAN T
		]]>
        <dynamic prepend="WHERE">
            <include refid="queryDynSql"/>
        </dynamic>
    </select>

    <insert id="insert" parameterClass="map">
        INSERT INTO ${schema.xd}.CASE
        (
        LOAN_ID
        <isNotEmpty prepend="," property="CASE_ID">CASE_ID</isNotEmpty>
        <isNotEmpty prepend="," property="CUSTOMER_ID">CUSTOMER_ID</isNotEmpty>
        <isNotEmpty prepend="," property="PRODUCT_ID">PRODUCT_ID</isNotEmpty>
        <isNotEmpty prepend="," property="LOAN_STATUS">LOAN_STATUS</isNotEmpty>
        <isNotEmpty prepend="," property="LOAN_AMOUNT">LOAN_AMOUNT</isNotEmpty>
        <isNotEmpty prepend="," property="RESIDUE_AMOUNT">RESIDUE_AMOUNT</isNotEmpty>
        <isNotEmpty prepend="," property="VALUE_DATE">VALUE_DATE</isNotEmpty>
        <isNotEmpty prepend="," property="DUE_DATE">DUE_DATE</isNotEmpty>
        <isNotEmpty prepend="," property="CREATE_TIME">CREATE_TIME</isNotEmpty>
        <isNotEmpty prepend="," property="UPDATE_TIME">UPDATE_TIME</isNotEmpty>
        ) VALUES (
        #LOAN_ID#
        <isNotEmpty prepend="," property="CASE_ID">#CASE_ID#</isNotEmpty>
        <isNotEmpty prepend="," property="CUSTOMER_ID">#CUSTOMER_ID#</isNotEmpty>
        <isNotEmpty prepend="," property="PRODUCT_ID">#PRODUCT_ID#</isNotEmpty>
        <isNotEmpty prepend="," property="LOAN_STATUS">#LOAN_STATUS#</isNotEmpty>
        <isNotEmpty prepend="," property="LOAN_AMOUNT">#LOAN_AMOUNT#</isNotEmpty>
        <isNotEmpty prepend="," property="RESIDUE_AMOUNT">#RESIDUE_AMOUNT#</isNotEmpty>
        <isNotEmpty prepend="," property="VALUE_DATE">#VALUE_DATE#</isNotEmpty>
        <isNotEmpty prepend="," property="DUE_DATE">#DUE_DATE#</isNotEmpty>
        <isNotEmpty prepend="," property="CREATE_TIME">#CREATE_TIME#</isNotEmpty>
        <isNotEmpty prepend="," property="UPDATE_TIME">#UPDATE_TIME#</isNotEmpty>
        )
    </insert>

    <update id="updateById" parameterClass="map">
        <![CDATA[ update ${schema.xd}.LOAN ]]>
        <dynamic prepend="set">
            <isNotNull prepend="," property="CUSTOMER_ID">CASE_ID = #CASE_ID#</isNotNull>
            <isNotNull prepend="," property="CUSTOMER_ID">CUSTOMER_ID = #CUSTOMER_ID#</isNotNull>
            <isNotNull prepend="," property="PRODUCT_ID">PRODUCT_ID = #PRODUCT_ID#</isNotNull>
            <isNotNull prepend="," property="LOAN_STATUS">LOAN_STATUS = #LOAN_STATUS#</isNotNull>
            <isNotNull prepend="," property="LOAN_AMOUNT">LOAN_AMOUNT = #LOAN_AMOUNT#</isNotNull>
            <isNotNull prepend="," property="RESIDUE_AMOUNT">RESIDUE_AMOUNT = #RESIDUE_AMOUNT#</isNotNull>
            <isNotNull prepend="," property="VALUE_DATE">VALUE_DATE = #VALUE_DATE#</isNotNull>
            <isNotNull prepend="," property="DUE_DATE">DUE_DATE = #DUE_DATE#</isNotNull>
            <isNotNull prepend="," property="CREATE_TIME">CREATE_TIME = #CREATE_TIME#</isNotNull>
            <isNotNull prepend="," property="UPDATE_TIME">UPDATE_TIME = #UPDATE_TIME#</isNotNull>
        </dynamic>
        <![CDATA[ where LOAN_ID = #LOAN_ID# ]]>
    </update>

    <delete id="delete" parameterClass="map">
        <![CDATA[
         delete from ${schema.xd}.LOAN where LOAN_ID = #LOAN_ID#
        ]]>
    </delete>

    <select id="query" parameterClass="map" resultClass="java.util.HashMap">
        <include refid="coreSql"/>
    </select>

    <select id="queryFull" parameterClass="map" resultClass="java.util.HashMap">
        SELECT T.*, P.* FROM ${schema.xd}.LOAN T
        LEFT JOIN ${schema.xd}.PRODUCT P ON T.PRODUCT_ID = P.PRODUCT_ID
        <dynamic prepend="WHERE">
            <include refid="queryDynSql"/>
        </dynamic>
        <![CDATA[ ORDER BY T.LOAN_ID]]>
    </select>


    <select id="seq" resultClass="String">
        select ${schema.interPlat}.nextval('SEQ_LOAN') from dual
    </select>

</sqlMap>

