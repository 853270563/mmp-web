<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.com.yitong.ares.servCtl.dao.impl.MhhEventConfigDao">
    <resultMap id="BaseResultMap" type="MhhEventConfig">
        <id property="eventId" column="EVENT_ID" jdbcType="VARCHAR" />
        <result property="eventName" column="EVENT_NAME" jdbcType="VARCHAR" />
        <result property="limitCount" column="LIMIT_COUNT" jdbcType="DECIMAL" />
        <result property="eventLevel" column="EVENT_LEVEL" jdbcType="DECIMAL" />
        <result property="parentId" column="PARENT_ID" jdbcType="VARCHAR" />
        <result property="remarks" column="REMARKS" jdbcType="VARCHAR" />
    </resultMap>

    <sql id="BaseColumnList">
        EVENT_ID,EVENT_NAME,LIMIT_COUNT,EVENT_LEVEL,PARENT_ID,
        REMARKS
    </sql>

    <sql id="BaseColumnValueList">
        #{eventId},#{eventName},#{limitCount},#{eventLevel},#{parentId},
        #{remarks}
    </sql>

    <sql id="TableClause"> ${schema.configPlat}.ARES_EVENT_CONFIG </sql>

    <sql id="WhereClause4Id">
        <where>
            EVENT_ID = #{eventId}
        </where>
    </sql>

    <insert id="insert" parameterType="MhhEventConfig">
        insert into <include refid="TableClause" /> (
        <include refid="BaseColumnList" />
        ) values (
        <include refid="BaseColumnValueList" />
        )
    </insert>

    <select id="queryById" parameterType="string" resultMap="BaseResultMap">
        <include refid="public.SelectById" />
    </select>

    <update id="updateById" parameterType="MhhEventConfig">
        update <include refid="TableClause" />
        <set>
        EVENT_NAME=#{eventName},
        LIMIT_COUNT=#{limitCount},
        EVENT_LEVEL=#{eventLevel},
        PARENT_ID=#{parentId},
        REMARKS=#{remarks}
        </set> <include refid="WhereClause4Id" />
    </update>

     <update id="updateByIdSelective" parameterType="MhhEventConfig">
            update <include refid="TableClause" />
            <set>
                <if test="eventName!=null">EVENT_NAME=#{eventName},</if>
                <if test="limitCount!=null">LIMIT_COUNT=#{limitCount},</if>
                <if test="eventLevel!=null">EVENT_LEVEL=#{eventLevel},</if>
                <if test="parentId!=null">PARENT_ID=#{parentId},</if>
                <if test="remarks!=null">REMARKS=#{remarks}</if>
            </set> <include refid="WhereClause4Id" />
     </update>


    <update id="deleteById" parameterType="string">
        <include refid="public.DeleteById" />
    </update>

    <select id="queryByCriteria" resultMap="BaseResultMap" parameterType="CriteriaQuery">
        <include refid="public.Select4Query" />
    </select>

    <select id="countByCriteria" resultType="int" parameterType="CriteriaQuery">
        <include refid="public.Count4Query" />
    </select>

    <select id="deleteByCriteria" resultType="int" parameterType="CriteriaQuery">
        <include refid="public.Delete4Query" />
    </select>
</mapper>
